<configuration>
    <!-- Console appender must be defined before being referenced -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the default log level to INFO for everything -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Set Apache Jena packages to WARN to suppress debug and info messages -->
    <logger name="org.apache.jena" level="WARN" />
</configuration>